{
  "name": "visitz-api",
  "version": "0.1.0",
  "description": "Middleware API for the MCFD Mobility app.",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start | pino-pretty -S -t SYS:standard",
    "start:dev": "nest start --watch | pino-pretty -S -t SYS:standard",
    "start:debug": "nest start --debug --watch | pino-pretty -t SYS:standard",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
	"test:gh": "jest --ci --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky || true"
  },
  "author": "MCFD Mobility",
  "license": "MIT License",
  "dependencies": {
    "@nestjs/axios": "^3.1.0",
    "@nestjs/cache-manager": "^2.3.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^8.0.0",
    "axios": "^1.7.7",
    "cache-manager": "^5.7.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "luxon": "^3.5.0",
    "nestjs-pino": "^4.1.0",
    "pino-http": "^10.3.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "save": "^2.9.0"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.1.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.6",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.module.(t|j)s",
      "!**/main.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "jest-junit": {
	"outputDirectory": "reports",
	"outputName": "jest-junit.xml",
	"ancestorSeparator": " â€º ",
	"uniqueOutputName": "false",
	"suiteNameTemplate": ".*\\.spec\\.ts$",
	"classNameTemplate": "**/*.(t|j)s",
	"titleTemplate": "{title}"
  }
}
