{
  "name": "visitz-api",
  "version": "0.1.0",
  "description": "Middleware API for the MCFD Mobility app.",
  "scripts": {
    "build": "nest build",
    "cy:gui": "cypress open",
    "cy:run": "cypress run --browser firefox",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start | pino-pretty -S -t SYS:standard",
    "start:dev": "nest start --watch | pino-pretty -S -t SYS:standard",
    "start:debug": "nest start --debug --watch | pino-pretty -t SYS:standard",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:gh": "NODE_OPTIONS=--experimental-vm-modules jest --ci --reporters=default --reporters=jest-junit",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:debug": "NODE_OPTIONS=--experimental-vm-modules node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky || true"
  },
  "author": "MCFD Mobility",
  "license": "MIT License",
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.12",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/swagger": "^11.1.0",
    "axios": "^1.7.7",
    "cache-manager": "^6.4.1",
    "clamscan": "^2.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "file-type": "^21.0.0",
    "load-esm": "^1.0.2",
    "luxon": "^3.5.0",
    "multer": "^2.0.0",
    "nestjs-pino": "^4.1.0",
    "pino-http": "^10.3.0",
    "pino-std-serializers": "^7.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.2",
    "save": "^2.9.0"
  },
  "devDependencies": {
    "@jest-mock/express": "^3.0.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.12",
    "@types/clamscan": "^2.4.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/luxon": "^3.4.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cypress": "^14.4.0",
    "cypress-plugin-api": "^2.11.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.6",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.module.(t|j)s",
      "!**/main.ts",
      "!**/*.entity.(t|j)s",
      "!**/configuration.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{title}",
    "classNameTemplate": "{title}",
    "titleTemplate": "{title}"
  }
}
